    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/level_header"
            android:textSize="50sp" />

        <RadioGroup
            android:id="@+id/menu_toggle_btn_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/menu_lvl_1_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onToggle"
                android:textColor="@android:color/darker_gray"
                android:background="#3079ab"
                android:textOff="@string/menu_level_1_btn"
                android:textOn="@string/menu_level_1_btn"
                android:textSize="50sp" />

            <ToggleButton
                android:id="@+id/menu_lvl_2_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onToggle"
                android:textColor="@android:color/darker_gray"
                android:background="#3079ab"
                android:textOff="@string/menu_level_2_btn"
                android:textOn="@string/menu_level_2_btn"
                android:textSize="50sp" />

            <ToggleButton
                android:id="@+id/menu_lvl_3_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onToggle"
                android:textColor="@android:color/darker_gray"
                android:background="#3079ab"
                android:textOff="@string/menu_level_3_btn"
                android:textOn="@string/menu_level_3_btn"
                android:textSize="50sp" />

            <ToggleButton
                android:id="@+id/menu_lvl_4_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onToggle"
                android:textColor="@android:color/darker_gray"
                android:background="#3079ab"
                android:textOff="@string/menu_level_4_btn"
                android:textOn="@string/menu_level_4_btn"
                android:textSize="50sp" />

            <ToggleButton
                android:id="@+id/menu_lvl_5_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onToggle"
                android:textColor="@android:color/darker_gray"
                android:background="#3079ab"
                android:textOff="@string/menu_level_5_btn"
                android:textOn="@string/menu_level_5_btn"
                android:textSize="50sp" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mainmenu_play_btn"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>
