<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leon.cannonball.HelpActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="#0099cc">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/help_title"
            android:textAlignment="center"
            android:textSize="50sp"
            android:layout_below="@+id/help_close"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/help_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/help_instructions"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/help_title"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/help_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:background="#0099cc"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
